{
  "name": "@freik/media-core",
  "version": "0.11.2",
  "description": "Web and NodeJS compatible media stuff",
  "author": "Kevin Frei <kevinfrei@hotmail.com>",
  "license": "Unlicense",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/esm/index.d.ts",
  "repository": "github:kevinfrei/media-core",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "watch": "jest --config jestconfig.json --watch",
    "clean": "rimraf lib && rimraf \".*.tsbuildinfo\"",
    "build": "tsc --project tsconfig.cjs.json && tsc --project tsconfig.esm.json",
    "cleanbuild": "yarn clean && yarn build",
    "dbg": "yarn clean && tsc --sourceMap true --project tsconfig.cjs.json && tsc --sourceMap true --project tsconfig.esm.json",
    "prepare": "yarn cleanbuild",
    "postinstall": "husky install",
    "prepublishOnly": "yarn test && yarn lint && yarn pinst --disable",
    "postpublish": "yarn pinst --enable",
    "format": "ftool format",
    "lint": "eslint --fix --ext .ts src",
    "preversion": "yarn lint",
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags --no-verify",
    "compile": "tsc --noEmit --project tsconfig.esm.json && tsc --noEmit --project tsconfig.cjs.json",
    "chk": "yarn format && yarn lint && yarn compile && yarn test"
  },
  "dependencies": {
    "@freik/typechk": "^0.1.0"
  },
  "devDependencies": {
    "@freik/build-tools": "^3.5.0",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "pinst": "^3.0.0",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.3"
  },
  "files": [
    "lib/**/*"
  ],
  "packageManager": "yarn@3.5.0"
}
