{
  "name": "@freik/media-core",
  "version": "0.7.0",
  "description": "Web and NodeJS compatible media stuff",
  "author": "Kevin Frei <kevinfrei@hotmail.com>",
  "license": "Unlicense",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://kevinfrei/media-core.git"
  },
  "scripts": {
    "test": "jest --config jestconfig.json",
    "watch": "jest --config jestconfig.json --watch",
    "build": "rimraf lib && tsc && er makeModule ./lib/index.js",
    "prepare": "yarn build",
    "postinstall": "husky install",
    "prepublishOnly": "yarn test && yarn lint && pinst --disable",
    "postpublish": "pinst --enable",
    "format": "prettier --write \"src/**/*.ts\" \"*.md\" \"*.json\" \".vscode/*.json\"",
    "lint": "eslint --fix --ext .ts src",
    "preversion": "yarn lint",
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags --no-verify",
    "compile": "tsc --noEmit",
    "chk": "yarn format && yarn lint && yarn compile && yarn test"
  },
  "devDependencies": {
    "@freik/build-tools": "^3.1.4",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "eslint": "^7.32.0",
    "husky": "^7.0.2",
    "jest": "^27.0.4",
    "pinst": "^2.1.6",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "@freik/core-utils": "^0.30.0"
  },
  "files": [
    "dist/**/*"
  ]
}
