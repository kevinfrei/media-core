{
  "name": "@freik/media-core",
  "version": "0.6.0",
  "description": "Web and NodeJS compatible media stuff",
  "author": "Kevin Frei <kevinfrei@hotmail.com>",
  "license": "Unlicense",
  "private": false,
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://kevinfrei/media-core.git"
  },
  "scripts": {
    "test": "jest --config jestconfig.json",
    "watch": "jest --config jestconfig.json --watch",
    "build": "rimraf lib && tsc && minify -i lib",
    "prepare": "yarn run build",
    "postinstall": "husky install",
    "prepublishOnly": "yarn test && yarn run lint && pinst --disable",
    "postpublish": "pinst --enable",
    "format": "prettier --write \"src/**/*.ts\" \"*.md\" \"*.json\" \".vscode/*.json\"",
    "lint": "yarn run eslint --fix --ext .ts src",
    "preversion": "yarn run lint",
    "version": "yarn run format && git add -A src",
    "postversion": "git push && git push --tags --no-verify",
    "compile": "tsc --noEmit",
    "chk": "yarn format && yarn lint && yarn compile && yarn test"
  },
  "devDependencies": {
    "@freik/build-tools": "^2.7.2",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "eslint": "^7.28.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "pinst": "^2.1.6",
    "prettier": "^2.3.1",
    "ts-jest": "^27.0.2",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "@freik/core-utils": "^0.25.0"
  },
  "files": [
    "lib/**/*"
  ]
}
